#include <iostream>
#include <string>
#include <vector>

using namespace std;

int main(){
    string input;
    cin>>input;
    int n = input.length();
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            if(i==j || i+j==n-1){
                cout<<input[j];
            }
            else{
                cout<<" ";
            }
        }
        cout<<endl;
    }
    return 0;
}

Input:
PROGRAM

Output:
P     M
 R   A
  O R
   G
  O R
 R   A
P     M
